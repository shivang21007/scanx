<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.company.scanx</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/scanx</string>
        <string>-config</string>
        <string>/etc/scanx/config</string>
        <string>-daemon</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>/etc/scanx/</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
        <key>OSQUERY_FLAGS</key>
        <string>--disable_events=false --disable_audit=false --audit_allow_user_events=true</string>
    </dict>
    
    <key>StandardOutPath</key>
    <string>/var/log/scanx/scanx-std.log</string>
    
    <key>StandardErrorPath</key>
    <string>/var/log/scanx/scanx-error.log</string>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>
    
    <key>ProcessType</key>
    <string>Background</string>
    
    <key>UserName</key>
    <string>root</string>
    
    <key>GroupName</key>
    <string>wheel</string>
    
    <key>InitGroups</key>
    <true/>
    
    <key>LaunchOnlyOnce</key>
    <false/>
    
    <key>AbandonProcessGroup</key>
    <true/>
    
    <key>ThrottleInterval</key>
    <integer>10</integer>
    
    <key>ExitTimeOut</key>
    <integer>30</integer>
</dict>
</plist>